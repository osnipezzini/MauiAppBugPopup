<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Color="#00FFFF00"
             CanBeDismissedByTappingOutsideOfPopup="False"
             Size="{OnIdiom Desktop='500, 250', Phone='300, 150'}"
             x:Class="MauiAppBugPopup.Views.SOLoading">
    <Frame CornerRadius="25">
        <AbsoluteLayout>
            <VerticalStackLayout 
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 250, 25"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <ActivityIndicator IsRunning="True"/>
                <Label Text="Loading ..." x:Name="LblMessage" HorizontalTextAlignment="Center" FontSize="12"/>
            </VerticalStackLayout>
        </AbsoluteLayout>
    </Frame>
</toolkit:Popup>
